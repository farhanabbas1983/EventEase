@inherits LayoutComponentBase
@inject EventEase.Services.UserSessionService SessionService

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>

    <!-- Toasts container (global) -->
    <Toasts />
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await SessionService.LoadAsync();
    }
}

<style>
    /* place toasts in top-right */
    .toasts-container { position: fixed; top: 1rem; right: 1rem; z-index: 1055; max-width: 320px; }
</style>
