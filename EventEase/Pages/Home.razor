@page "/"
@using EventEase.Components

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<hr />

<div class="row">
    <div class="col-md-5">
        <h2>Add Event</h2>
        <EventForm @bind-EventModel="newEvent" OnValidSubmit="AddEvent" />
    </div>
    <div class="col-md-7">
        <h2>Events</h2>
        <div class="row">
            @{
                var currentEvents = EventService.GetAll().ToList();
            }

            @if (currentEvents.Any())
            {
                @foreach (var ev in currentEvents)
                {
                    <div class="col-md-6 mb-3" @key="ev.Id">
                        <EventCard EventName="@ev.Name" Date="@ev.Date" Location="@ev.Location" />
                        <div class="mt-2">
                            <NavLink href="@($"/events/{ev.Id}")">View details</NavLink>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No events yet.</p>
            }
        </div>
    </div>
</div>

@code {
    [Inject]
    private EventEase.Services.EventService EventService { get; set; } = null!;

    private Event newEvent = new Event();

    private void AddEvent(Event e)
    {
        // copy values to avoid accidental reference reuse
        EventService.Add(new Event { Name = e.Name, Date = e.Date, Location = e.Location });
        // clear bound model
        newEvent = new Event();
    }
}
